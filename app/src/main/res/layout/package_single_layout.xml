<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:id="@+id/package_single_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/package_single_layout_image"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            //package Name
            <TextView
                android:id="@+id/package_single_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textDirection="rtl"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            //package description
            <TextView
                android:id="@+id/package_single_layout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:textDirection="rtl"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thick"
        android:layout_below="@id/package_single_linearlayout"
        android:layout_marginTop="10dp"
        android:background="@color/line_color" />

</RelativeLayout>
